            <TextBlock x:Name="BibleTxt" FontSize="20" Grid.Row="4" Height="300" Width="500" Background="White" TextWrapping="Wrap"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="2"  Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="LastLeftDate" FontSize="25"  FontWeight="Bold" >Where you left off on December 12,2017</TextBlock>
        </StackPanel>
        <StackPanel  Height="50" Width="500" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center">
