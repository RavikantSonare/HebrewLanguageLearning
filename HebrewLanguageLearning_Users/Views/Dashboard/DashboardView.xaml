                <TextBlock Foreground="White" FontSize="16" TextAlignment="Center" Height="80" Width="80" Canvas.Top="18" Canvas.Left="1">
               Level 1: <LineBreak /> Book
                </TextBlock>
                <Image  x:Name="ribbon" Margin="0,0 0 0" HorizontalAlignment="Center"  VerticalAlignment="Center" Source="/HebrewLanguageLearning_Users;component/Assets/ribbon.png"/>

                <!--<TextBlock Text="Deepn" Canvas.Top="30" Canvas.Left="30"/>-->
