@model IEnumerable<HebrewLanguageLearning_Admin.Models.HLL_DictionaryModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <h3>Dictionary List <small>List of saved dictionary</small></h3>
    </div>

    <div id="reportrange" class="range">
        <div class="visible-xs header-element-toggle">
            <a class="btn btn-primary btn-icon"><i class="icon-calendar"></i></a>
        </div>
        <div class="date-range"><i>2</i> <b><i>Jun</i> <i>2017</i></b><em> - </em><i>1</i> <b><i>Jul</i> <i>2017</i></b></div>
        <span class="label label-danger">9</span>
    </div>
</div>

<p>

</p>
<div class="panel panel-default">
    <div class="panel-heading"><h6 class="panel-title"><i class="icon-table"></i> Dictionary List</h6></div>
    <div class="datatable">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Dictionary English
                    </th>
                    <th>
                        Dictionary Hebrew
                    </th>
                    <th>
                        Sound
                    </th>
                    <th>
                        Lng Lear. Defi.
                    </th>
                    <th>
                        Definition
                    </th>
                    <th>
                        Picture/Videos
                    </th>
                    <th>
                        Semantic Domain(s)
                    </th>
                    <th>
                        Example(s)
                    </th>
                    <th>
                        Dic. Reference(s)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DicEnglish)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DicHebrew)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count_Sound)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count_LLD)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count_Definition)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count_Pictures)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count_SemanticDomain)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count_Example)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count_DictionaryReference)
                        </td>
                        <td>
                            @Html.ActionLink("Edit Entry", "Edit", new { id = item.DictionaryEntriesId }) |
                            @Html.ActionLink("New Entry", "Create") |
                            @Html.ActionLink("Edit Picture", "Details", new { id = item.DictionaryEntriesId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.DictionaryEntriesId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
