@model HebrewLanguageLearning_Admin.DBContext.HLL_DictionaryEntries

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content-inner ">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div class="row">
        <div class="col-md-3">
            <h4></h4>
        </div>
    </div>
    <form action="#" class="form-horizontal" role="form">
        <div class="panel panel-default">
            <div class="panel-heading"><h6 class="panel-title"><i class="icon-grid"></i>Dictionary Info</h6></div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-2"><label>Dictionary English: </label></div>
                    <div class="col-md-3"><label> @Html.DisplayFor(model => model.DicEnglish) </label></div>
                    <div class="col-md-2"><label> Dictionary  Hebrew: </label></div>
                    <div class="col-md-3"><label> @Html.DisplayFor(model => model.DicHebrew) </label></div>
                </div>


            </div>
        </div>
    </form>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
