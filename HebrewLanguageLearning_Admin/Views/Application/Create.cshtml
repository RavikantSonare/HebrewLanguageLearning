@model HebrewLanguageLearning_Admin.Models.HLL_ApplicationModel
@using HebrewLanguageLearning_Admin.GenericClasses


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/jquery-1.10.2.js"></script>

<div class="page-content-inner ">
    <br>
    <h2>Application</h2>
    @using (Ajax.BeginForm("Create", "Application", new AjaxOptions { UpdateTargetId = "result", OnBegin = "return StartValidation();" }, new { enctype = "multipart/form-data" }))
    {
        @*@using (Html.BeginForm()){*@
        @Html.AntiForgeryToken()
        <Div action="#" role="form">
            <div class="panel panel-default">
                <div class="panel-heading"><h6 class="panel-title"><i class="icon-pencil3"></i>Add Application</h6></div>
                <div class="panel-body">
                    <div class="text-danger" id="result"></div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Choose Lesson:</label>
                                @Html.DropDownListFor(x => x.LessonId, SI._PurposeforLessonList, new { @class = "form-control", onchange = @"getDetail(this.value)" })
                                @Html.ValidationMessageFor(x => x.LessonId, "", new { @class = "text_danger", @Style = "color: #D65C4F" })
                                <label id="LessonIdErrorMessage" class="text-danger" style="display:none;color:red;margin-top: 30px;">Please Select lesson</label>

                            </div>
                            <div class="col-md-6">
                                <label>Import Excel File:</label>

                                <div class="controls imgParent">
                                    @Html.HiddenFor(h => h.ApplicationId, new { name = "SoundUrl", id = "SoundUrl" })
                                    @Html.TextBoxFor(p => p.ApplicationId, null, new { data_val = "false", type = "file", @class = "input-file", name = "Soundfile", id = "Soundfile" })
                                    <span class="fileupload"><span class="icon-upload2"></span>Choose File</span>
                                    @*@Html.ValidationMessageFor(n => n.Soundfile, null, new { @class = "text_danger", @style = "color: red !important;" })
                                        <div class="col-md-2" id="output"></div>
                                        <label id="fileUploaderErrorMessage" class="text-danger" style="display:none;color:red;margin-top: 30px;">Please Upload Sound file in MP3 format</label>*@

                                </div>

                            </div>
                        </div>
                    </div>


                    <hr>
                    <div id="Application_Data">
                        @{Html.RenderPartial("_HLL_Application_Data_PartialView", Model);}
                    </div>

                </div>
                <hr>
                <hr>
                <div class="form-group panel-body">
                    <div class="form-actions text-right">
                        <input type="reset" value="Cancel" class="btn btn-danger">
                        <input type="submit" value="Save and Continue" class="btn btn-primary">
                    </div>
                </div>
            </div>
        </Div>
                            }

</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<!-- Form modal -->
<div id="ModalDiv"></div>
<!-- /form modal -->

<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>



<script type="text/javascript">

    var textboxId = 5; var textboxName = 4;

    function StartValidation() {
        debugger;
        var AppSentenceDynamicTextBoxData = $('#AppSentenceDynamicTextBox').val(); $('#AppSentenceDynamicTextBoxErrorMessage').hide();
        if (typeof AppSentenceDynamicTextBoxData == 'undefined' || AppSentenceDynamicTextBoxData == "") {
            $('#AppSentenceDynamicTextBoxErrorMessage').show();
            return false;
        }

        else
            $('#fileUploaderErrorMessage').hide();

        return true;
    }
    function getFileExtension(filename) {
        if (typeof filename != 'undefined') {
            return filename.slice((filename.lastIndexOf(".") - 1 >>> 0) + 2);
        }
        return "";

    }
    function GetDynamicTextBox(value) {
        var div = $("<div class='row'><div class='col-md-3'>" +
                           "<label>Hebrew Application-" + textboxId + ":</label>" +
                           "<input class='form-control text-box single-line' id='AppSentenceDynamicTextBox' name='AppSentenceDynamicTextBox[" + textboxName + "]' placeholder='Hebrew Application - " + textboxId + "' type='text' value=''>" +
                           "<span class='field-validation-valid text-danger' data-valmsg-for='AppSentenceDynamicTextBox[0]' data-valmsg-replace='true'></span>" +
                           "<label id='AppSentenceDynamicTextBoxErrorMessage' class='text-danger' style='display:none;'>Please Enter At least one definition</label>    </div>" +
                           "<div class='col-md-3'><label>Picture/Video " + textboxId + ":</label><div class='controls imgParent'>" +
                           "<input id='SoundUrl' name='ApplicationId' type='hidden' value=''>" +
                           "<input class='input-file' data-val='false' id='Soundfile' name='ApplicationId' type='file' value=''>" +
                           "<span class='fileupload'><span class='icon-upload2'></span>Choose File</span></div>   </div>" +
                           "<div class='col-md-3'><label>Sound " + textboxId + ":</label>" +
                           "<div class='controls imgParent'>" +
                           "<input id='SoundUrl' name='ApplicationId' type='hidden' value=''>" +
                           "<input class='input-file' data-val='false' id='Soundfile' name='ApplicationId' type='file' value=''>" +
                           "<span class='fileupload'><span class='icon-upload2'></span>Choose File</span>  </div></div>" +
                           "<div class='col-md-3'><label>Correct Answer-" + textboxId + ":</label> <br>" +
                           "<a data-toggle='modal' class='btn btn-success' role='button' href='#form_modal_Definition' onclick='SetCorrectAnswer(" + textboxId + ")'>  Edit</a> </div>");
        textboxName++;
        textboxId++;
        return div;
    }
    function AddTextBox() {
        if (textboxId <= 15) {
            var div = GetDynamicTextBox("");
            $("#TextBoxContainer").append(div);
        }
    }
    $(function () {
        var values = eval('@Html.Raw(ViewBag.Values)');
        if (values != null) {
            $("#TextBoxContainer").html("");
            $(values).each(function () {
                $("#TextBoxContainer").append(GetDynamicTextBox(this));
            });
        }
    });
    SetCorrectAnswer = function (CorrectAnswerID) {
        debugger;
        var ddlLessonId = $('#LessonId').val();
        if (isValid()) {
            $('#ModalDiv').html("<div id='form_modal_Definition' class='modal fade' tabindex='-1' role='dialog'></div>");
            $('#form_modal_Definition').load('@Url.Action("GetCorrectAnswerView", "Application")?CorrectAnswerNo=' + CorrectAnswerID + '&LessonId=' + ddlLessonId + '&isNext=false');
        }
    }
    var SaveFromDataCorrectAnswer = (function () {
        debugger;
        var CorrectAnswerID = $('#PopUp_CorrectAnswerID').val();
        var LessonId = $('#LessonId').val();
        $.ajax({ type: "POST",
            url: '@Url.Action("CreateHebrewAppData", "Application")',
            data: $("#CreateHebrewAppData").serialize(),
            success: function (data) {
                window.location = '/Application/Create'
            }, err: function (data) { console.log("Server Is Not Respose" + data); }
        });
    });
    var SaveFromDataAndNext = (function () {
        debugger;
        var CorrectAnswerID = $('#PopUp_CorrectAnswerID').val();
        var LessonId = $('#LessonId').val();
         $.ajax({type: "POST",
            url: '@Url.Action("CreateHebrewAppData", "Application")', 
            data: $("#CreateHebrewAppData").serialize(),
            success: function (data) {
                 $('#form_modal_Definition').load('@Url.Action("GetCorrectAnswerView", "Application")?CorrectAnswerNo=' + CorrectAnswerID + '&LessonId=' + LessonId + '&isNext=true');
            }, err: function (data) {
                console.log("Server Is Not Respose" + data);
            }
        });
             
    });
    isValid = function () {
        var ddlLessonId = $('#LessonId').val();
        $('#LessonIdErrorMessage').hide();
        if (typeof ddlLessonId == 'undefined' || ddlLessonId == '0') {
            $('#LessonIdErrorMessage').show();
            return false;
        }
        return true;

    }
    var getDetail = function (x) {
        $.ajax({ url: 'GetDataForm', method: 'post', data: { LessonId: x, __RequestVerificationToken: document.getElementsByName('__RequestVerificationToken')[0].value } }).done(function (res) {
            $('#Application_Data').html(res);
        });
    };

</script>
